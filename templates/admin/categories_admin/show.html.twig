{% extends 'admin/base_admin.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th></th>
                <td>
                    {% if category.logo != '' %}
                        <img src="{{ category.logo }}" height="150px" width="auto" />
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
<div class="d-flex">
    <a href="{{ path('app_categories_admin_index') }}" class="btn btn-info mr-3"><i class="fa-solid fa-chevron-left fa-sm mr-3"></i>Retour</a>

    <a href="{{ path('app_categories_admin_edit', {'id': category.id}) }}" class="btn btn-info mr-3">Editer<i class="fa-solid fa-pen-to-square fa-lg ml-3"></i></a>

    {{ include('admin/categories_admin/_delete_form.html.twig') }}
</div>
{% endblock %}
